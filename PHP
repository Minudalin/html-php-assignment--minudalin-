foreach ($marks as $mark) {
    if ($mark >= 90) {
        $grade = "A";
    } elseif ($mark >= 80) {
        $grade = "B";
    } elseif ($mark >= 70) {
        $grade = "C";
    } elseif ($mark >= 60) {
        $grade = "D";
    } else {
        $grade = "F";
    }
    echo "Marks: $mark - Grade: $grade<br>";
}
?>
