Q8. <?php
function deal($costA, $sizeA, $costB, $sizeB) {
    // Calculate cost per litre for each drink
    $valueA = $costA / $sizeA;
    $valueB = $costB / $sizeB;

    // Compare and decide
    if ($valueA < $valueB) {
        echo "Choose Drink A to save money.";
    } elseif ($valueB < $valueA) {
        echo "Choose Drink B to save money.";
    } else {
        echo "Both drinks offer the same value.";
    }
}

// Prices and sizes
$costA = 25; $sizeA = 11;
$costB = 23; $sizeB = 9;

// Call the function
deal($costA, $sizeA, $costB, $sizeB);
?>
Q10. <?php
$marks = [95, 82, 74, 60, 45]; // Sample marks for 5 students

foreach ($marks as $mark) {
    if ($mark >= 90) {
        $grade = "A";
    } elseif ($mark >= 80) {
        $grade = "B";
    } elseif ($mark >= 70) {
        $grade = "C";
    } elseif ($mark >= 60) {
        $grade = "D";
    } else {
        $grade = "F";
    }
    echo "Marks: $mark - Grade: $grade<br>";
}
?>
Q11. <?php
$day_number = 3; // Change 1-7 to test different days

switch ($day_number) {
    case 1:
        echo "Monday";
        break;
    case 2:
        echo "Tuesday";
        break;
    case 3:
        echo "Wednesday";
        break;
    case 4:
        echo "Thursday";
        break;
    case 5:
        echo "Friday";
        break;
    case 6:
        echo "Saturday";
        break;
    case 7:
        echo "Sunday";
        break;
    default:
        echo "Invalid day number!";
}
?>
Q12. <?php
$marks = 68; // Change this value to test different cases

if ($marks >= 75) {
    echo "First Class";
} elseif ($marks >= 60 && $marks <= 74) {
    echo "Second Class";
} elseif ($marks >= 40 && $marks <= 59) {
    echo "Third Class";
} else {
    echo "Fail";
}
?>
