Q5. <?php
$price1 = 10; $qty1 = 2;
$price2 = 20; $qty2 = 1;
$price3 = 5;  $qty3 = 4;
$subtotal = ($price1 * $qty1) + ($price2 * $qty2) + ($price3 * $qty3);
$tax = $subtotal * 0.10;
$total = $subtotal + $tax;
echo "Subtotal: $" . $subtotal . "<br>";
echo "Tax (10%): $" . $tax . "<br>";
echo "Total Cost: $" . $total;
?>

