echo "\nInitial x = $x\n";
echo "Pre-increment (++x) = " . (++$x) . " (x is now $x)\n";
$x = 5;
echo "Post-increment (x++) = " . ($x++) . " (x is now $x)\n";
$y = 5;
echo "\nInitial y = $y\n";
echo "Pre-decrement (--y) = " . (--$y) . " (y is now $y)\n";
$y = 5;
echo "Post-decrement (y--) = " . ($y--) . " (y is now $y)\n";
?>

