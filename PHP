Q17. <?php
// Initial balance
$balance = 1000;

// Function to deposit money
function deposit($balance, $amount) {
    if ($amount > 0) {
        $balance += $amount;
        echo "Deposited: $amount\n";
    } else {
        echo "Deposit amount must be greater than 0\n";
    }
    return $balance;
}

// Function to withdraw money
function withdraw($balance, $amount) {
    if ($amount > 0) {
        if ($amount <= $balance) {
            $balance -= $amount;
            echo "Withdrawn: $amount\n";
        } else {
            echo "Insufficient balance for withdrawal\n";
        }
    } else {
        echo "Withdrawal amount must be greater than 0\n";
    }
    return $balance;
}

// Example transaction
$transactionType = "withdraw"; // change to "deposit" to test
$amount = 300;

// Using switch-case to decide
switch ($transactionType) {
    case "deposit":
        $balance = deposit($balance, $amount);
        break;
    case "withdraw":
        $balance = withdraw($balance, $amount);
        break;
    default:
        echo "Invalid transaction type\n";
}

echo "Current Balance: $balance";
?>

Q18. <?php
$name = "John";
$age = null;

// Check if $name is set
if (isset($name)) {
    echo "The variable 'name' is set.\n";
} else {
    echo "The variable 'name' is NOT set.\n";
}

// Check if $age is set
if (isset($age)) {
    echo "The variable 'age' is set.\n";
} else {
    echo "The variable 'age' is NOT set.\n";
}

// Check multiple variables at once
if (isset($name, $age)) {
    echo "Both variables are set.\n";
} else {
    echo "Either 'name' or 'age' is NOT set.\n";
}
?>

Q21. <?php
function isLeapYear($year) {
    // A leap year is divisible by 4 but not by 100, unless it's also divisible by 400
    if (($year % 4 == 0 && $year % 100 != 0) || ($year % 400 == 0)) {
        return true;
    }
    return false;
}

// Example usage:
$year = 2024;
if (isLeapYear($year)) {
    echo "$year is a leap year.";
} else {
    echo "$year is not a leap year.";
}
?>

Q22. <?php
function countWordOccurrences($string, $word) {
    $string = strtolower($string);
    $word = strtolower($word);
    $wordsArray = str_word_count($string, 1);
    $count = 0;
    foreach ($wordsArray as $w) {
        if ($w === $word) {
            $count++;
        }
    }

    return $count;
}
$text = "The quick brown fox jumps over the lazy dog. The dog was not amused.";
$targetWord = "the";

echo "The word '$targetWord' occurs " . countWordOccurrences($text, $targetWord) . " times.";
?>

Q24. <?php
$str = "   Hello World! PHP is amazing.   ";
$trimmed = trim($str);
echo "Trimmed: '$trimmed'\n";
echo "Length: " . strlen($trimmed) . "\n";
echo "Uppercase: " . strtoupper($trimmed) . "\n";
echo "Lowercase: " . strtolower($trimmed) . "\n";
echo "Ucfirst: " . ucfirst(strtolower($trimmed)) . "\n";
echo "Ucwords: " . ucwords(strtolower($trimmed)) . "\n";
echo "Reversed: " . strrev($trimmed) . "\n";
$pos = strpos($trimmed, "PHP");
echo "Position of 'PHP': " . ($pos !== false ? $pos : "Not found") . "\n";
echo "Replace 'PHP' with 'JavaScript': " . str_replace("PHP", "JavaScript", $trimmed) . "\n";
echo "Substring (0-5): " . substr($trimmed, 0, 5) . "\n";
$words = explode(" ", $trimmed);
echo "Exploded Array: ";
print_r($words);
echo "Imploded String: " . implode("-", $words) . "\n";
echo "Repeat 'Hi' 3 times: " . str_repeat("Hi ", 3) . "\n";
echo "Compare 'Hello' and 'hello': " . strcmp("Hello", "hello") . "\n";
$htmlString = "<b>Bold Text</b>";
echo "HTML Special Chars: " . htmlspecialchars($htmlString) . "\n";
echo "Shuffled: " . str_shuffle($trimmed) . "\n";
?>

